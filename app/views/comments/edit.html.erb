<h1>Edit Comment</h1>

<%= form_with model: [@article, @comment] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit "Update Comment" %>
  </p>
<% end %>

<%= link_to "Back", article_comment_path(@article, @comment) %>